{
  "name": "@hyper-registry/core",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./models": "./dist/models/index.js",
    "./storage": "./dist/storage/index.js",
    "./validation": "./dist/validation/index.js"
  },
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outdir=dist --format=esm --declaration",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "dev": "node --loader tsx src/index.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.0",
    "meilisearch": "^0.35.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "esbuild": "^0.19.0",
    "vitest": "^1.0.0",
    "tsx": "^4.7.0"
  }
}
