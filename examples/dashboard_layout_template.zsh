render_dashboard() {
  clear
  
  # Render custom header
  render_custom_header
  
  # Apply layout preset
  PANEL_REGISTRY=()
  PANEL_ORDER=()
  apply_layout_preset "$LAYOUT_PRESET"
  
  # Render panels with content
  for key value in ${(kv)PANEL_CONFIG}; do
    IFS='|' read -r id title width height x y border <<< "$value"
    
    # Get content based on panel ID
    local content=""
    case "$id" in
      top_left|panel_1|p1)     content=$(generate_content_top_left) ;;
      top_right|panel_2|p2)    content=$(generate_content_top_right) ;;
      bottom_left|panel_3|p4)  content=$(generate_content_bottom_left) ;;
      bottom_right|panel_4|p5) content=$(generate_content_bottom_right) ;;
      *)                       content="Panel: $id\nTitle: $title" ;;
    esac
    
    # Use specified border or default
    local border_style="${border:-$DEFAULT_BORDER_STYLE}"
    
    # Render the panel
    if [[ -n "${PANEL_REGISTRY[$id]}" ]]; then
      layout_render_panel "$id" "$content" "$border_style"
    fi
  done
  
  # Render custom footer
  render_custom_footer
}

interactive_mode() {
  while true; do
    render_dashboard
    
    # Read single keypress
    read -k 1 -s key
    
    case "$key" in
      q|Q)
        clear
        echo "Thank you for using $DASHBOARD_TITLE!"
        echo ""
        exit 0
        ;;
      
      r|R)
        # Refresh - loop will redraw
        ;;
      
      h|H)
        show_custom_help
        ;;
      
      s|S)
        clear
        layout_show_stats
        echo ""
        read -k 1 -s -p "Press any key to continue..."
        ;;
      
      v|V)
        clear
        layout_validate
        echo ""
        read -k 1 -s -p "Press any key to continue..."
        ;;
      
      *)
        # Try custom key handlers
        if ! handle_custom_keys "$key"; then
          # Key not recognized
          continue
        fi
        ;;
    esac
  done
}


