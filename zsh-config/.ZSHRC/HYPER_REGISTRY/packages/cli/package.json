{
  "name": "@hyper-registry/cli",
  "version": "0.1.0",
  "description": "Hyper Registry command-line interface",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "hyper": "dist/bin/hyper.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./commands": {
      "import": "./dist/commands/index.js",
      "types": "./dist/commands/index.d.ts"
    }
  },
  "scripts": {
    "build": "esbuild src/**/*.ts --outdir=dist --format=esm --sourcemap --declaration",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev": "tsx watch src/bin/hyper.ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@hyper-registry/core": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.11",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "table": "^6.8.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "esbuild": "^0.19.10",
    "vitest": "^1.1.0",
    "tsx": "^4.7.0"
  }
}
